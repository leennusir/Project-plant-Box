<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="20dp"
    android:layout_columnWeight="1"
    android:layout_rowWeight="1"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"

    app:cardCornerRadius="20dp"
    android:elevation="25dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box2"

        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">


        <ImageView
            android:id="@+id/plant_card_image"



            android:layout_width="67dp"
            android:layout_height="69dp"
            android:layout_marginTop="10dp"


            android:padding="0dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/plant_card_name"
            app:layout_constraintEnd_toEndOf="parent"


            app:layout_constraintHorizontal_bias="0.092"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <TextView
            android:id="@+id/plant_card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"


            android:background="@color/green4"

            android:gravity="center"
            android:padding="10dp"
            android:text="Name of Menu"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/plant_card_image"
            app:layout_constraintStart_toStartOf="@+id/plant_card_image"
            app:layout_constraintTop_toBottomOf="@+id/plant_card_image">

        </TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
