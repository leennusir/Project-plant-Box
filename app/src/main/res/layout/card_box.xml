<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="20dp"
    android:layout_columnWeight="1"
    android:layout_rowWeight="1"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:backgroundTint="@color/forth"
    app:cardCornerRadius="20dp"
    android:elevation="25dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green2"
        android:backgroundTint="@color/green2"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">


        <ImageView
            android:id="@+id/box_image"
            android:layout_width="98dp"
            android:layout_height="104dp"
            android:background="@drawable/icons8_box_500"
            android:padding="0dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/box_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <TextView
            android:id="@+id/box_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:background="@color/design_default_color_surface"
            android:gravity="center"
            android:padding="10dp"
            android:text="Name of Menu"
            android:textColor="@color/green2"
            android:textColorLink="@color/green2"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/box_image"
            app:layout_constraintStart_toStartOf="@+id/box_image"
            app:layout_constraintTop_toBottomOf="@+id/box_image">

        </TextView>

        <TextView
            android:id="@+id/name_plant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:background="@color/design_default_color_surface"
            android:gravity="center"
            android:padding="10dp"
            android:text="Name of Menu"
            android:textColor="@color/green2"
            android:textColorLink="@color/green2"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/box_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/box_name"
            app:layout_constraintTop_toBottomOf="@+id/box_name"
            app:layout_constraintVertical_bias="1.0">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
